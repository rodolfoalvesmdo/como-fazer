<%- include('../header') %>
<br>

<table class="table table-hover" style="border: 2px solid #dee2e6">
  <thead>
    <tr>
      <th scope="col">Categoria</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
  <% categorias.forEach(categoria => { %>
    <tr>
      <td>
        <a href="/publicacoes/categoria/<%= categoria.id %>"><%= categoria.categoria %></a>
      <td>
        <a class="btn btn-secondary" href="/categorias/editar/<%= categoria.id %>">Editar</a>
        <a class="btn btn-danger" href="/categorias/excluir/<%= categoria.id %>">Exlcuir</a>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>

<a class="btn btn-primary" href="/categorias/nova">Nova Categoria</a>
<a class="btn btn-primary" href="/publicacoes/nova">Nova Publicação</a>

<%- include('../footer') %>